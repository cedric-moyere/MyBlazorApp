@inherits LayoutComponentBase

<PageTitle>MyBlazorApp</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 auth">
            <LoginDisplay />
        </div>
        <article class="content px-4">
            <AuthorizeView>
                <Authorized>
                    @Body
                </Authorized>
                <NotAuthorized>
                    <div>
                        <a href="Identity/Account/Login">Log in</a> or
                        <a href="Identity/Account/Register">Register</a> to access your shop
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </article>
    </main>
</div>
